<%- include("../layouts/adminAside.ejs")  %>

<!--Head with search bar and other options Here-->
<%- include("../layouts/adminHead.ejs")  %>


        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p>Complete Product Listings Here</p>
                </div>
                <div>

                    <a href="/admin/productslist/add_new_product" class="btn btn-primary btn-sm rounded">Create new</a>

                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                       
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                       
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->

                <div class="card-body">

                    <!-- products -->
                    <% for( let i = 0 ; i < 6 ; i++){ %>
                       
                    <article class="itemlist">
                            
                                                 
                        <div class="row align-items-center">
                                
                                
                            <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                    
                                    <a class="itemside" href="#">
                                        <div class="left">
                                            <img src="/ProductImage/<%=products[i].image[0]%>" class="img-sm img-thumbnail" alt="Item">
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0"> <%= products[i].ProductName%> </h6>
                                        </div>
                                    </a>
                            </div>
                           
                            <div class="col-lg-1 col-sm-1 col-2  flex-grow-0"> <span> <%= products[i].targetGroup %> </span> </div> 
                            <div class="col-lg-2 col-sm-2 col-4  flex-grow-0"> <span> <%= products[i].Category %> </span> </div>
                            <div class="col-lg-2 col-sm-2 col-4 col-price"> <span>â‚¹<%=products[i].salePrice%></span> </div>
                            <div class="col-lg-1 col-sm-1 col-2  flex-grow-0"> <span><%=products[i].stockQuantity%> pcs</span> </div>
                            <div class="col col-check flex-grow-0">
                                <div class="form-check d-flex align-items-center ">
                                    <% if(products[i].isActive){ %>
                                        <input class="form-check-input" checked type="checkbox" onclick="listProduct('<%=products[i]._id%>')" >
                                    <% }else{ %>
                                        <input class="form-check-input"  type="checkbox" onclick="listProduct('<%=products[i]._id%>')" >
                                        <% } %> 
                                </div>
                            </div>
                        
                            <div class="col col-check text-end flex-grow-0">

                                <a href="#" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                  
                            </div>
                        </div> <!-- row .// -->

                       
                    </article> <!-- itemlist  .// -->
                    <% } %>

                
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
                        <li class="page-item"><a class="page-link" href="#">03</a></li>
                        <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                        <li class="page-item"><a class="page-link" href="#">16</a></li>
                        <li class="page-item"><a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a></li>
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->




<%- include("../layouts/adminFooter.ejs")  %>