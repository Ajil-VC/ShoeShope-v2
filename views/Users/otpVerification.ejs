
<%- include("../layouts/header.ejs")  %>
<%- include("../layouts/navigation.ejs")  %>


    <main class="main" onload="startTimer()" >
  
        <section class="pt-150 pb-150 viewHeight">
            <div class="container text-center">


                <div class="row justify-content-center align-items-center min-vh-100">
                    <div class="col-md-6">
                        <div class="card p-5">
                            <h3 class="text-center text-danger"> <span id="otp-timer" ></span></h3>
                            <p class="text-center text-success">Verify your OTP</p>
                            <form method="post" action="/signup/verify-otp">
                                <div class="otp-form-group">
                                    <input type="text" class="otp-input form-control"  oninput="moveToNext(this, 'otp2')" maxlength="1" required="" name="otp">
                                    <input type="text" class="otp-input form-control" id="otp2" oninput="moveToNext(this, 'otp3')" maxlength="1" required="" name="otp">
                                    <input type="text" class="otp-input form-control" id="otp3" oninput="moveToNext(this, 'otp4')" maxlength="1" required="" name="otp">
                                    <input type="text" class="otp-input form-control" id="otp4" oninput="moveToNext(this, 'otp5')" maxlength="1" required="" name="otp">
                                    <input type="text" class="otp-input form-control" id="otp5" maxlength="1" required="" name="otp">
                                </div>
                                <div class="otp-form-group text-center">
                                    <button type="submit" class="btn btn-fill-out btn-block hover-up" id="otp-submit-bn" name="login">Submit</button>
                                    <a href="/signup" class="btn" id="resend-otp" hidden >Resend OTP</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </section>
    </main>


    <%- include("../layouts/footer.ejs")  %>