
<%- include("../layouts/header.ejs")  %>
<body>
<%- include("../layouts/navigation.ejs")  %>


    <main class="main">

        <!--Registration Page here-->
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                   
                            <div class="col-lg-1"></div>
                            <div class="col-lg-6 mx-auto">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">Register</h3>
                                        </div>
                                      
                                        <form method="post" action="/signup" >
                                            <div class="otp-form-group">
                                                <input type="text" required="" name="firstName" placeholder="First Name">
                                            </div>
                                            <div class="otp-form-group">
                                                <input type="text" required="" name="lastName" placeholder="Last Name">
                                            </div>
                                            <div class="otp-form-group">
                                                <input required="" type="email" name="email" placeholder="Email">
                                            </div>
                                            <div class="otp-form-group">
                                                <input required="" type="number" name="mobile_no" placeholder="Mobile Number">
                                            </div>
                                            <div class="otp-form-group">
                                                <input required="" type="password" name="password" placeholder="Password">
                                            </div>
                                         
                                            <div class="otp-form-group text-center">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Submit</button>
                                            </div>
                                        </form>
                                        <div class="divider-text-center mt-15 mb-15">
                                            <span> or</span>
                                        </div>
                                        <ul class="btn-login list_none text-center mb-15">
                                            
                                            <li><a href="/auth/google" class="btn btn-google hover-up">Login With Google</a></li>
                                        </ul>
                                        <div class="text-muted text-center">Already have an account? <a href="#">Sign in now</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    <%- include("../layouts/footer.ejs")  %>