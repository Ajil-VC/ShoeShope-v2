<%- include("../layouts/header.ejs")  %>
<body>
<%- include("../layouts/navigation.ejs")  %>
<main class="main">
    <section class="pt-50 pb-150" style="font-family: Arial, sans-serif;" >
    <div class="container">
        <h1><i class="fi-rs-shopping-bag"></i> Your Cart</h1>
        <p>Total 2 items in your cart</p>

        <div class="row">
            <div class="col-md-8">
                <!-- Cart Items -->
                <div class="cart-item">

                    <img src="/ProductImage/1718969688867_croppedimage1.png" alt="Nike Air Jordan 1 Mid Sneakers" class="cart-item-image">

                    <div class="cart-item-details">
                        <h3>Nike</h3>
                        <p>Men Air Jordan 1 Mid Sneakers</p>
                        <h4>₹ 14,000</h4>
                        <div class="cart-item-options">
                            <select class="form-select-cart">
                                <option>Size: S</option>
                                <option>Size: M</option>
                                <option>Size: L</option>
                                <option>Size: XL</option>
                            </select>
                            <select class="form-select-cart">
                                <option>Qty: 1</option>
                            </select>
                            <span class="stock-info">7 left</span>
                        </div>
                    </div>

                    <button class="btn-remove"><i class="fi-rs-trash"></i></button>
                </div>
                <!-- Repeat the above cart-item div for the blue sneaker -->

            </div>
            <div class="col-md-4">
                <!-- Order Summary -->
                <div class="order-summary">
                    <h2>Order Summary</h2>
                    <div class="summary-item">
                        <span>2 items</span>
                        <span>₹ 28,000</span>
                    </div>
                    <div class="summary-item">
                        <span>Delivery Fee</span>
                        <span>₹ 52</span>
                    </div>
                    <div class="summary-item">
                        <span>GST Amount</span>
                        <span>₹ 987</span>
                    </div>
                    <div class="summary-item discount">
                        <span>Discount 30%</span>
                        <span>₹ -8400</span>
                    </div>
                    <div class="summary-total">
                        <strong>Total Amount</strong>
                        <strong>₹ 19,600</strong>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter Coupon Code (optional)">
                    <button class="btn btn-primary btn-block">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</section>
</main>
    
    <%- include("../layouts/footer.ejs")  %> 
