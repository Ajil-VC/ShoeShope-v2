        @media screen and (max-width: 600px) {
            .walletc-table, .walletc-thead, .walletc-tbody, .walletc-th, .walletc-td, .walletc-tr {
                display: block;
            }
            .walletc-thead .walletc-tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }
            .walletc-tr {
                margin-bottom: 15px;
            }
            .walletc-td {
                border: none;
                position: relative;
                padding-left: 50%;
