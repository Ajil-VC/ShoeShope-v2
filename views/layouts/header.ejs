/*Detailed view of order*/

#order-detail-table{
  max-height: 500px;
}

.bot-order-container {
  background-color: #ffffff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  margin-bottom: 15px;
  padding: 15px;
}

.bot-order-address-container {
  background-color: #ffffff;
  padding: 15px;
  display: flex;
  justify-content: space-between;
}

.bot-product-image {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 4px;
}

.bot-product-name {
  font-weight: 600;
  margin-bottom: 5px;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}

.bot-brand {
  font-size: 0.9em;
  color: #6c757d;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}

.bot-date-box {
  background-color: #f8f9fa;
  padding: 10px;
  border-radius: 6px;
}

.bot-bold {
  font-weight: bold;
  color: black;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-size: small;
}

.bot-status {
  display: inline-block;
  padding: 5px 10px;
  border-radius: 15px;
  font-size: 0.9em;
  font-weight: 500;
  margin-top: 10px;
}

.bot-status-shipped {
  background-color: #fdff77;
  color: #c20000;
}

.bot-status-pending {
  background-color: #ffeeba;
  color: #856404;
}

.bot-status-delivered {
  background-color: #d4edda;
  color: #155724;
}

.bot-status-cancelled {
  background-color: #edd4d4;
  color: #ff0000;
}

.bot-return-btn {
  padding: 8px 15px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.9em;
  transition: background-color 0.2s;

}

.size-style{
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 4px;
    padding-bottom: 4px;
    background-color: seagreen;
    color: white;
    border-radius: 6px;
}
.brand-size-align{
    margin-left: 20px;
}
p{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    
}

.bot-return-btn:hover {
  background-color: #0056b3;
}
.bot-return-status{
    display: flex;
    justify-content: end;
}

